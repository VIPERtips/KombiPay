{
  "expo": {
    "name": "KombiPay",
    "slug": "KombiPay",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/kombipay_app_icon.png",
    "scheme": "kombipay",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "KombiPay needs access to your camera to scan QR codes for payments."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/kombi_pay_logo2.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/kombi_pay_logo2.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/kombi_pay_logo2.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
